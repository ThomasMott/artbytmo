---
layout: layouts/base.njk
js: read
---

<section class="bg">
	<div class="grid">
		<div class="top-info">
			<h1 class="title">{{ title }}</h1>
			{% if tldr %}
				<div class="tldr">
					<p>{{ tldr }}</p>
				</div>
			{% endif %}
			<div class="float-container right">
				{% if related %}
				<div class="float">
					<h4>Related Links</h4>
					<ul>
					{% for link in related %}
					<li>{{ link }}</li>
					{% endfor %}
					</ul>
				</div>
				{% endif %}
			</div>
			<div>
				<img src="{{ image }}">
			</div>
		</div>
		<div class="grid">
	</div>
</section>
<div id="reading-progress"><div class="reading-progress-container"><div id="reading-progress-fill"></div></div></div>
{% set rposts = collections[tags[0]] | related(page.url, 667001) %}
{% include "posts-related.njk" %}
